{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "jsx": "react",
    "types": [
      "reflect-metadata",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "node_modules/@types",
    "*.d.ts",
  ]
}